{
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "reports",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "coverageReporters": ["text", "html", "text-summary", "json", "lcov"],
    "coverageThreshold": {
      "global": {
        "lines": 100,
        "statements": 100,
        "functions" : 100
      }
    }
  },
  "name": "crushed-bugs",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@carbon/grid": "^10.15.0",
    "@carbon/icons-react": "10.3.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "carbon-components": "^10.22.0",
    "carbon-components-react": "^7.22.0",
    "carbon-icons": "^7.0.7",
    "enzyme": "^3.11.0",
    "node-sass": "4.12.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-scripts": "3.4.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "jest --collectCoverage --bail[=false] -u",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "enzyme-adapter-react-16": "^1.15.5",
    "jest-environment-enzyme": "^7.1.2",
    "jest-enzyme": "^7.1.2"
  }
}